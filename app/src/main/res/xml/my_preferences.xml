<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory android:title="Category 1">
    <EditTextPreference android:title="This is an EditText preference"
        android:key="keyEditText"
        android:summary="Click to edit the preference"/>
    <SwitchPreference android:title="This is a Switch preference"
        android:summary="Click to togggle ON or OFF"
        android:key="keySwitch"

        />
</PreferenceCategory>




 <PreferenceCategory android:title="Category 2">
     <ListPreference android:title="This is a List preference"
         android:key="keyList"
         android:entries="@array/list_entries_names"
         android:entryValues="@array/list_entries_values"
         android:summary="Click to select an option from the list"/>
 </PreferenceCategory>

</PreferenceScreen>